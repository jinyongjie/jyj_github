<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_search_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6.0dip" >

        <ImageView
            android:id="@+id/home_search_logo"
            android:layout_width="130.0dip"
            android:layout_height="44.0dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/home_search_logo_google" />

        <ImageView
            android:id="@+id/home_search_arrow"
            android:layout_width="26.0dip"
            android:layout_height="44.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="78.0dip"
            android:paddingLeft="12.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/home_search_arrow" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/home_search_input"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/home_search_address_input_height"
            android:layout_marginLeft="@dimen/home_search_address_margin"
            android:layout_weight="1.0"
            android:background="@drawable/home_search_input_bg"
            android:gravity="center_vertical"
            android:paddingLeft="11.0dip"
            android:singleLine="true"
            android:textColor="@color/black_alpha80"
            android:textSize="16.0sp" />

        <ImageButton
            android:id="@+id/home_search_button"
            android:layout_width="@dimen/home_search_address_confirm_button_width"
            android:layout_height="@dimen/home_search_address_input_height"
            android:layout_marginRight="@dimen/home_search_address_margin"
            android:background="@drawable/home_search_btn_bg"
            android:src="@drawable/home_search_btn" />
    </LinearLayout>

</LinearLayout>