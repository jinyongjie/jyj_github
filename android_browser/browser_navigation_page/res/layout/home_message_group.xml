<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_center"
    android:layout_width="@dimen/message_hint_width"
    android:layout_height="@dimen/message_hint_height"
    android:layout_gravity="right"
    android:layout_marginRight="15.0dip"
    android:layout_marginTop="7.0dip"
    android:background="@drawable/message_center_selector" >

    <ImageView
        android:id="@+id/message_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/message_icon_solid" />

    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right|center"
        android:layout_marginRight="8.0dip"
        android:layout_marginTop="3.0dip"
        android:background="@drawable/message_num_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/message_title_textsize"
        android:visibility="gone" />

</FrameLayout>