<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_main_menu"
    android:orientation="vertical"
     >

    <Button
        android:id="@+id/menu_all"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/selector_button_menuitem"
        android:drawableLeft="@drawable/main_menu_icon_all_folder"
        android:gravity="left|center"
        android:paddingRight="25dp"
       
        
        android:text="@string/menu_all"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_text_size" >
    </Button>


    <Button
        android:id="@+id/menu_dir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/selector_button_menuitem"
        android:drawableLeft="@drawable/main_menu_icon_folder"
        android:gravity="left|center"
        android:text="@string/menu_dir"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_text_size" >
    </Button>



    <Button
        android:id="@+id/menu_like"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/selector_button_menuitem"
        android:drawableLeft="@drawable/main_menu_icon_favorite"
        android:gravity="left|center"
        android:text="@string/menu_like"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_text_size" >
    </Button>



    <Button
        android:id="@+id/menu_tag"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/selector_button_menuitem"
        android:drawableLeft="@drawable/main_menu_icon_tags"
        android:gravity="left|center"
        android:text="@string/menu_tag"
        android:textColor="@color/white"
        android:textSize="@dimen/menu_text_size"
        android:visibility="gone" >
    </Button>



</LinearLayout>